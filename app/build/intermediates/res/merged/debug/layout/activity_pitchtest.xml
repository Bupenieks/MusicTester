<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ben.musictester.PitchTest">

    <TextView
        android:id="@+id/numtests"
        android:layout_width="36dp"
        android:layout_height="26dp"
        android:layout_marginLeft="21dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBaseline_toBaselineOf="@+id/curscore"
        app:layout_constraintLeft_toRightOf="@+id/divider" />

    <TextView
        android:id="@+id/divider"
        android:layout_width="19dp"
        android:layout_height="47dp"
        android:text="/"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/playbutton"
        app:layout_constraintVertical_bias="0.541" />

    <Button
        android:id="@+id/buttonE"
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:text="E"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonB"
        app:layout_constraintRight_toLeftOf="@+id/buttonF"
        android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/buttonF"
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/buttonE"
        android:text="F"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonC"
        app:layout_constraintHorizontal_bias="0.498" />

    <Button
        android:id="@+id/buttonG"
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/buttonF"
        android:text="G"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonD"
        app:layout_constraintLeft_toRightOf="@+id/buttonF"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/buttonD"
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:layout_alignBaseline="@+id/buttonB"
        android:layout_alignBottom="@+id/buttonB"
        android:layout_toEndOf="@+id/playbutton"
        android:layout_toRightOf="@+id/playbutton"
        android:text="D"
        app:layout_constraintLeft_toRightOf="@+id/buttonC"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/playbutton"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.619" />

    <Button
        android:id="@+id/playbutton"
        android:layout_width="146dp"
        android:layout_height="76dp"
        android:layout_below="@+id/buttonG"
        android:layout_centerHorizontal="true"
        android:text="Play Note Again"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.369" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:layout_below="@+id/playbutton"
        android:layout_toLeftOf="@+id/buttonD"
        android:layout_toStartOf="@+id/buttonD"
        android:text="C"
        app:layout_constraintLeft_toRightOf="@+id/buttonB"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/playbutton" />

    <Button
        android:id="@+id/buttonB"
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:layout_alignBaseline="@+id/buttonC"
        android:layout_alignBottom="@+id/buttonC"
        android:layout_toLeftOf="@+id/playbutton"
        android:layout_toStartOf="@+id/playbutton"
        android:text="B"
        app:layout_constraintLeft_toRightOf="@+id/buttonA"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/playbutton" />

    <Button
        android:id="@+id/buttonA"
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:layout_above="@+id/buttonF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:text="A"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/playbutton" />

    <TextView
        android:id="@+id/curscore"
        android:layout_width="34dp"
        android:layout_height="29dp"
        android:layout_marginRight="-26dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintRight_toLeftOf="@+id/divider"
        app:layout_constraintTop_toTopOf="@+id/divider" />

    <TextView
        android:id="@+id/percentscore"
        android:layout_width="96dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:text="--"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

</android.support.constraint.ConstraintLayout>
